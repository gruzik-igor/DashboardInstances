{% extends '@App/layouts/base.html.twig' %}

{% block body %}
    <div class="content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <form action="/resources" method="POST">
                        {% for resource in resources %}
                            <div class="form-group">
                                <label for="resourceName">Resource name:</label>
                                <input type="text" readonly value="{{ resource.name }}" id="resourceName" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="defaultValue">Default value:</label>
                                <input type="text" name="resources[{{ loop.index }}][defaultValue]" id="defaultValue" value="{{ resource.defaultValue }}" class="form-control">
                            </div>
                        {% endfor %}
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

