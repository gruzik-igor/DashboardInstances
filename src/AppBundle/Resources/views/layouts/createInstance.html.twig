{% extends '@App/layouts/createInstance.html.twig' %}

{% block body %}
    <div class="content-wrapper">
        <div class="container-fluid">
            <div class="col-md-12">
                <h3>Create instance foe business</h3>
                <hr>
                <form action="/instances/create" method="POST">
                    <div class="form-row">

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="name">Instance name:</label>
                                    <input name="name" type="text" readonly id="instanceName" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="defaultValue">Set CPU limit:</label>
                                    <input type="text" name="resourse_limits_cpu"
                                           id="cpuValue" class="form-control"> %
                                </div>
                                <div class="form-group">
                                    <label for="defaultValue">Set RAM limit:</label>
                                    <input type="text" name="resourse_limits_ram"
                                           id="ramValue" class="form-control"> MB
                                </div>
                                <div class="form-group">
                                    <label for="defaultValue">Set HDD limit:</label>
                                    <input type="text" name="resourse_limits_hdd"
                                           id="hddValue" class="form-control"> GB
                                </div>
                            </div>

                        <div class="col-md-2 ">
                            <button type="submit" class="btn btn-success btn-block">Create Instance</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
{% endblock %}

